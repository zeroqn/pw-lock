TARGET := riscv64-unknown-linux-gnu
CC := $(TARGET)-gcc
LD := $(TARGET)-gcc
OBJCOPY := $(TARGET)-objcopy
CFLAGS := -fPIC -O3 -nostdlib -nostdinc -nostartfiles -fvisibility=hidden -I deps/molecule -I deps/secp256k1/src -I deps/secp256k1 -I deps/ckb-c-std-lib -I deps/ckb-c-std-lib/libc -I c -I c/lib -I build -Wall -Werror -Wno-nonnull -Wno-nonnull-compare -Wno-unused-function -g
LDFLAGS := -Wl,-static -fdata-sections -ffunction-sections -Wl,--gc-sections
SECP256K1_SRC := deps/secp256k1/src/ecmult_static_pre_context.h
MOLC := moleculec
MOLC_VERSION := 0.4.1
PROTOCOL_HEADER := c/protocol.h
PROTOCOL_SCHEMA := c/blockchain.mol
PROTOCOL_VERSION := d75e4c56ffa40e17fd2fe477da3f98c5578edcd1
PROTOCOL_URL := https://raw.githubusercontent.com/nervosnetwork/ckb/${PROTOCOL_VERSION}/util/types/schemas/blockchain.mol

# docker pull nervos/ckb-riscv-gnu-toolchain:gnu-bionic-20191209
BUILDER_DOCKER := nervos/ckb-riscv-gnu-toolchain@sha256:45d2fbc4969b8bcab48102c28e837d2e03b0605a5d9ce2abc2e3ba4a8a939df2

all: specs/cells/secp256k1_keccak256_sighash_all_lib.so build/generate_data_hash c/lib/secp256k1_keccak256_sighash_all_lib.h specs/cells/secp256k1_keccak256_sighash_all_lib_tester

all-via-docker: ${PROTOCOL_HEADER}
	docker run --rm -v `pwd`:/code ${BUILDER_DOCKER} bash -c "cd /code && make -f LibMakefile"

specs/cells/secp256k1_keccak256_sighash_all_lib_tester: c/lib/secp256k1_keccak256_sighash_all_lib_tester.c c/lib/secp256k1_keccak256_sighash_all_lib.h
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $<
	$(OBJCOPY) --only-keep-debug $@ $@.debug
	$(OBJCOPY) --strip-debug --strip-all $@

specs/cells/secp256k1_keccak256_sighash_all_lib.so: c/lib/secp256k1_keccak256_sighash_all_lib.c build/secp256k1_data_info.h
	$(CC) $(CFLAGS) $(LDFLAGS) -shared -o $@ $<
	$(OBJCOPY) --only-keep-debug $@ $@.debug
	$(OBJCOPY) --strip-debug --strip-all $@

c/lib/secp256k1_keccak256_sighash_all_lib.h: build/generate_data_hash specs/cells/secp256k1_keccak256_sighash_all_lib.so
	$< specs/cells/secp256k1_keccak256_sighash_all_lib.so secp256k1_keccak256_sighash_all_lib_data_hash > $@

build/generate_data_hash: c/lib/generate_data_hash.c
	gcc -O3 -I c/lib/blake2b -o $@ $<

clean:
	rm specs/cells/secp256k1_keccak256_sighash_all_lib_tester
	rm specs/cells/secp256k1_keccak256_sighash_all_lib.so
	rm c/lib/secp256k1_keccak256_sighash_all_lib.h
	rm build/generate_data_hash
	rm specs/cells/*.debug

.PHONY: all all-via-docker
